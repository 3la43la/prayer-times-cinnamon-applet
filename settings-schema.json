{
    "location_sec": {
        "type": "section",
        "title": "إعدادات الموقع / Location"
    },
    "city": {
        "type": "entry",
        "default": "Riyadh",
        "description": "المدينة (English)"
    },
    "country": {
        "type": "entry",
        "default": "Saudi Arabia",
        "description": "الدولة (English)"
    },
    "method": {
        "type": "combobox",
        "default": 4,
        "description": "طريقة الحساب",
        "options": {
            "أم القرى": 4,
            "الرابطة": 3,
            "مصر": 5,
            "الكويت": 9
        }
    },
    "display_sec": {
        "type": "section",
        "title": "إعدادات العرض / Display"
    },
    "appLocale": {
        "type": "combobox",
        "default": "ar",
        "description": "لغة البرنامج",
        "options": {
            "العربية": "ar",
            "English": "en"
        }
    },
    "timeFormat": {
        "type": "combobox",
        "default": "24h",
        "description": "نظام الوقت",
        "options": {
            "12 ساعة (ص/م)": "12h",
            "24 ساعة": "24h"
        }
    },
    "pre_notification_sec": {
        "type": "section",
        "title": "التنبيه المسبق / Pre-Notification"
    },
    "enablePreNotify": {
        "type": "switch",
        "default": true,
        "description": "تفعيل التنبيه المسبق"
    },
    "preNotifyTime": {
        "type": "spinbutton",
        "default": 10,
        "min": 1,
        "max": 30,
        "step": 1,
        "units": "دقيقة / mins",
        "description": "تنبيه قبل الصلاة بـ:"
    },
    "notifications_sec": {
        "type": "section",
        "title": "التنبيهات / Notifications"
    },
    "enableSound": {
        "type": "switch",
        "default": true,
        "description": "تفعيل صوت الأذان"
    }
}